{
  "name": "conduit-desktop",
  "version": "0.1.1",
  "description": "Conduit Desktop - AI Intelligence Hub for macOS",
  "author": "Simpleflo",
  "license": "MIT",
  "homepage": "https://conduit.simpleflo.dev",
  "main": "dist/main/index.js",
  "conduit": {
    "minCLIVersion": "0.1.0",
    "bundledCLIVersion": "0.1.0",
    "compatibilityNotes": "Initial release - requires CLI 0.1.0 or later"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "bundle:cli": "node scripts/bundle-cli.js",
    "prebuild:full": "npm run bundle:cli",
    "build:full": "npm run prebuild:full && electron-vite build",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build:full && electron-builder --mac",
    "package:mac:dmg": "npm run build:full && electron-builder --mac dmg",
    "package:mac:zip": "npm run build:full && electron-builder --mac zip",
    "package:mac:universal": "npm run build:full && electron-builder --mac --universal",
    "release": "npm run build:full && electron-builder --mac --publish always",
    "release:cli": "npm run bundle:cli && echo 'CLI binaries ready for release'"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "electron-updater": "^6.6.2",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@electron/notarize": "^3.1.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "lucide-react": "^0.303.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amlandas/Conduit-AI-Intelligence-Hub.git"
  }
}
